{
  "$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
  "files": {
    "ignore": ["dist", "node_modules", "reports", "artifacts"]
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useConst": "warn",
        "noParameterAssign": "error"
      },
      "complexity": {
        "noUselessCatch": "error"
      }
    }
  }
}
