{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "files": {
    "includes": [
      "**",
      "!**/dist",
      "!**/node_modules",
      "!**/reports",
      "!**/artifacts",
      "!cspell.json",
      "!apps/chatgpt-dashboard/src/client/index.css"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "formatWithErrors": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useConst": "error",
        "noParameterAssign": "error",
        "useTemplate": "warn",
        "useExponentiationOperator": "error"
      },
      "complexity": {
        "noUselessCatch": "error",
        "noForEach": "warn",
        "useFlatMap": "warn"
      },
      "performance": {
        "noAccumulatingSpread": "warn",
        "noDelete": "warn"
      },
      "suspicious": {
        "noDoubleEquals": "error",
        "noExplicitAny": "warn",
        "noDebugger": "error"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "noUndeclaredVariables": "error",
        "useExhaustiveDependencies": "warn"
      }
    }
  }
}