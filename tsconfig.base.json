{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@brainwav/cortexdx": ["packages/cortexdx/src/index.ts"],
      "@brainwav/cortexdx/*": ["packages/cortexdx/src/*"]
    }
  },
  "exclude": ["dist", "node_modules"]
}
