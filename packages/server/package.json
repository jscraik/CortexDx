{
    "name": "@brainwav/cortexdx-server",
    "version": "0.1.0",
    "description": "FastMCP server implementation for CortexDx",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": "./dist/index.js",
