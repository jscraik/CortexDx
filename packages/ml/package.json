{
    "name": "@brainwav/cortexdx-ml",
    "version": "0.1.0",
    "description": "ML orchestration and LLM integration for CortexDx",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": "./dist/index.js",
        "./ml/*": "./dist/ml/*.js",
        "./orchestration/*": "./dist/orchestration/*.js"
    },
    "scripts": {
        "build": "tsup",
        "clean": "rimraf dist",
        "lint": "biome lint src",
        "format": "biome format --write .",
        "test": "vitest run"
    },
    "dependencies": {
        "@brainwav/cortexdx-core": "workspace:*",
        "@brainwav/cortexdx-plugins": "workspace:*",
        "@langchain/core": "^1.0.4",
        "@langchain/langgraph": "^1.0.2",
        "@ai-sdk/openai": "^2.0.65",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/node": "^22.19.1",
        "tsup": "^8.1.0",
        "typescript": "^5.6.3",
        "vitest": "^2.1.3",
        "rimraf": "^6.0.1"
    }
}