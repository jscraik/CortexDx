{
  "name": "@brainwav/cortexdx",
  "version": "1.0.0",
  "description": "CortexDx â€” Diagnostic Meta-Inspector (stateless, plugin-based)",
  "type": "module",
  "bin": {
    "cortexdx": "dist/cli.js"
  },
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist",
    "dev": "tsx src/cli.ts",
    "server": "tsx src/server.ts",
    "server:prod": "node dist/server.js",
    "prepack": "pnpm run build",
    "test": "CORTEXDX_RUN_INTEGRATION=0 vitest --run",
    "test:integration": "CORTEXDX_RUN_INTEGRATION=1 vitest --run --testTimeout 30000",
    "doctor": "node dist/cli.js doctor",
    "schema:check": "tsx scripts/validate-schemas.ts",
    "axe:check": "tsx scripts/accessibility/story-card.ts",
    "internal:self-improvement": "tsx scripts/internal/self-improvement.ts",
    "internal:self-healing-suite": "tsx src/self-healing/cli.ts",
    "security:semgrep": "tsx scripts/security/run-semgrep.ts",
    "security:gitleaks": "tsx scripts/security/run-gitleaks.ts",
    "security:zap": "tsx scripts/security/run-zap.ts",
    "deepcontext:status": "tsx scripts/ci/check-deepcontext-status.ts",
    "research:smoke": "vitest tests/academic-provider-smoke.spec.ts --run --coverage.enabled false",
    "sbom": "node dist/cli.js sbom",
    "test:reports": "vitest tests/report-mcp-tools.spec.ts tests/cloud-storage.spec.ts --run"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.600.0",
    "@aws-sdk/s3-request-presigner": "^3.600.0",
    "@langchain/core": "^1.0.4",
    "@langchain/langgraph": "^1.0.2",
    "@modelcontextprotocol/sdk": "^0.6.0",
    "@opentelemetry/api": "1.9.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "better-sqlite3": "^12.4.1",
    "commander": "^11.1.0",
    "eventsource-parser": "^1.1.0",
    "pino": "^10.1.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.8.5",
    "@types/ws": "^8.5.12",
    "@vitest/coverage-v8": "^2.1.3",
    "jsdom": "^25.0.1",
    "playwright": "^1.48.2",
    "rimraf": "^6.0.1",
    "tsup": "^8.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3",
    "yaml": "^2.6.0"
  },
  "license": "Apache-2.0",
  "keywords": [
    "mcp",
    "diagnostic",
    "sse",
    "json-rpc",
    "governance",
    "security"
  ]
}
