{
  "$id": "https://cortexdx.local/schemas/run-summary.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "$schemaVersion",
    "severitySummary",
    "findings",
    "meta",
    "analysis"
  ],
  "properties": {
    "$schemaVersion": { "type": "string" },
    "severitySummary": {
      "type": "object",
      "required": ["info", "minor", "major", "critical"],
      "properties": {
        "info": { "type": "integer", "minimum": 0 },
        "minor": { "type": "integer", "minimum": 0 },
        "major": { "type": "integer", "minimum": 0 },
        "critical": { "type": "integer", "minimum": 0 }
      }
    },
    "findings": {
      "type": "array",
      "items": { "$ref": "finding.schema.json" }
    },
    "analysis": { "type": "string" },
    "meta": {
      "type": "object",
      "properties": {
        "version": { "type": "string" },
        "deterministic": { "type": "boolean" },
        "backend": { "type": "string" },
        "model": { "type": "string" },
        "plugins": {
          "type": "array",
          "items": { "type": "string" }
        },
        "dryRun": { "type": "boolean" }
      },
      "required": [
        "version",
        "deterministic",
        "backend",
        "model",
        "dryRun",
        "plugins"
      ]
    }
  }
}
