{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "cortexdx",
  "projectType": "library",
  "sourceRoot": "packages/cortexdx/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --dir packages/cortexdx run build"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "NODE_ENV=test pnpm --dir packages/cortexdx run test"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --dir packages/cortexdx exec biome lint src"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --dir packages/cortexdx exec biome format src"
      }
    },
    "schema:check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --dir packages/cortexdx run schema:check"
      }
    },
    "axe:check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --dir packages/cortexdx run axe:check"
      }
    },
    "docs-ingest": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --dir packages/cortexdx exec tsx src/cli.ts library ingest-docs"
      }
    },
    "doctor": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --dir packages/cortexdx run doctor"
      }
    }
  },
  "tags": ["diagnostics", "mcp", "stateless"]
}
