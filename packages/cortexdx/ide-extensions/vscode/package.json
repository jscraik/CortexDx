{
  "name": "cortexdx-vscode",
  "displayName": "CortexDx",
  "description": "Real-time MCP validation and assistance for Visual Studio Code",
  "version": "1.0.0",
  "publisher": "brainwav",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "validation",
    "diagnostics",
    "ai"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:python",
    "onLanguage:go"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "CortexDx",
      "properties": {
        "cortexdx.server.url": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "URL of the CortexDx server"
        },
        "cortexdx.server.transport": {
          "type": "string",
          "enum": [
            "http",
            "websocket",
            "stdio"
          ],
          "default": "http",
          "description": "Transport protocol for MCP communication"
        },
        "cortexdx.diagnostics.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time diagnostics"
        },
        "cortexdx.diagnostics.delay": {
          "type": "number",
          "default": 500,
          "description": "Delay in milliseconds before running diagnostics"
        },
        "cortexdx.completions.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable code completions"
        },
        "cortexdx.quickFixes.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable quick fixes"
        },
        "cortexdx.formatting.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable code formatting"
        },
        "cortexdx.formatting.onSave": {
          "type": "boolean",
          "default": false,
          "description": "Format code on save"
        }
      }
    },
    "commands": [
      {
        "command": "cortexdx.validate",
        "title": "CortexDx: Validate Current File"
      },
      {
        "command": "cortexdx.analyzeProject",
        "title": "CortexDx: Analyze Project"
      },
      {
        "command": "cortexdx.generateTests",
        "title": "CortexDx: Generate Tests"
      },
      {
        "command": "cortexdx.formatCode",
        "title": "CortexDx: Format Code"
      },
      {
        "command": "cortexdx.startServer",
        "title": "CortexDx: Start Server"
      },
      {
        "command": "cortexdx.stopServer",
        "title": "CortexDx: Stop Server"
      }
    ],
    "keybindings": [
      {
        "command": "cortexdx.validate",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorTextFocus"
      },
      {
        "command": "cortexdx.formatCode",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "editorTextFocus"
      }
    ],
    "languages": [
      {
        "id": "typescript",
        "extensions": [
          ".ts",
          ".tsx"
        ],
        "aliases": [
          "TypeScript",
          "typescript"
        ]
      },
      {
        "id": "javascript",
        "extensions": [
          ".js",
          ".jsx",
          ".mjs"
        ],
        "aliases": [
          "JavaScript",
          "javascript"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  }
}
