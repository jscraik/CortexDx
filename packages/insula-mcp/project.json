{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "cortexdx",
  "projectType": "library",
  "sourceRoot": "packages/insula-mcp/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --dir packages/insula-mcp run build"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --dir packages/insula-mcp run test"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --dir packages/insula-mcp exec biome lint src"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --dir packages/insula-mcp exec biome format src"
      }
    },
    "schema:check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --dir packages/insula-mcp run schema:check"
      }
    },
    "axe:check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --dir packages/insula-mcp run axe:check"
      }
    },
    "doctor": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --dir packages/insula-mcp run doctor"
      }
    }
  },
  "tags": ["diagnostics", "mcp", "stateless"]
}
